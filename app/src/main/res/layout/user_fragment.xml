<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout
    android:orientation="vertical"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:background="#f5f5f5"
    android:layout_height="match_parent"
    >
    <!--头部开始-->
    <RelativeLayout
        android:layout_alignParentTop="true"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:background="#E71F19"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:orientation="horizontal"
        >
        <TextView
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:background="@mipmap/setting"
            android:layout_width="30dp"
            android:layout_height="30dp"/>

        <TextView
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:textSize="18dp"
            android:textColor="#ffffff"
            android:text="@string/user"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            />

        <TextView
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:background="@mipmap/share"
            android:layout_width="30dp"
            android:layout_height="30dp"/>
    </RelativeLayout>
    <!--头部结束-->

    <ScrollView
        android:layout_marginTop="45dp"
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        >
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <LinearLayout
                android:orientation="vertical"
                android:background="@mipmap/userbg"
                android:gravity="center"
                android:layout_width="match_parent"
                android:layout_height="140dp">
                <com.makeramen.roundedimageview.RoundedImageView
                    android:scaleType="fitCenter"
                    android:layout_width="70dp"
                    app:riv_oval="true"
                    android:src="@mipmap/head_logo"
                    android:layout_height="70dp" />
                <TextView
                    android:layout_marginTop="10dp"
                    android:text="昵称"
                    android:textColor="#fff"
                    android:textSize="16dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
            </LinearLayout>

            <RelativeLayout
                android:foreground="?android:attr/selectableItemBackgroundBorderless"
                android:clickable="true"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:background="#ffffff"
                android:id="@+id/diyi"
                android:layout_marginTop="10dp"
                android:layout_width="match_parent"
                android:layout_height="45dp">
                <TextView
                    android:layout_centerVertical="true"
                    android:layout_alignParentLeft="true"
                    android:background="@mipmap/my_order"
                    android:layout_width="30dp"
                    android:layout_height="30dp" />
                <TextView
                    android:layout_centerVertical="true"
                    android:text="@string/my_order"
                    android:textColor="#666666"
                    android:layout_marginStart="40dp"
                    android:layout_alignParentLeft="true"
                    android:layout_marginLeft="15dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
                <TextView
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:background="@mipmap/icon_right"
                    android:layout_width="16dp"
                    android:layout_height="16dp" />
            </RelativeLayout>
            <TextView
                android:background="#f5f5f5"
                android:layout_width="match_parent"
                android:layout_height="1dp" />

            <RelativeLayout
                android:foreground="?android:attr/selectableItemBackgroundBorderless"
                android:clickable="true"
                android:id="@+id/dier"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:background="#ffffff"
                android:layout_width="match_parent"
                android:layout_height="45dp">
                <TextView
                    android:layout_centerVertical="true"
                    android:layout_alignParentLeft="true"
                    android:background="@mipmap/my_order"
                    android:layout_width="30dp"
                    android:layout_height="30dp" />
                <TextView
                    android:layout_centerVertical="true"
                    android:text="@string/coupon"
                    android:textColor="#666666"
                    android:layout_marginStart="40dp"
                    android:layout_alignParentLeft="true"
                    android:layout_marginLeft="15dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
                <TextView
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:background="@mipmap/icon_right"
                    android:layout_width="16dp"
                    android:layout_height="16dp" />
            </RelativeLayout>
            <TextView
                android:background="#f5f5f5"
                android:layout_width="match_parent"
                android:layout_height="1dp" />

            <RelativeLayout
                android:foreground="?android:attr/selectableItemBackgroundBorderless"
                android:clickable="true"
                android:id="@+id/disan"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:background="#ffffff"
                android:layout_width="match_parent"
                android:layout_height="45dp">
                <TextView
                    android:layout_centerVertical="true"
                    android:layout_alignParentLeft="true"
                    android:background="@mipmap/my_order"
                    android:layout_width="30dp"
                    android:layout_height="30dp" />
                <TextView
                    android:layout_centerVertical="true"
                    android:text="@string/evaluate"
                    android:textColor="#666666"
                    android:layout_marginStart="40dp"
                    android:layout_alignParentLeft="true"
                    android:layout_marginLeft="15dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
                <TextView
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:background="@mipmap/icon_right"
                    android:layout_width="16dp"
                    android:layout_height="16dp" />
            </RelativeLayout>
            <TextView
                android:background="#f5f5f5"
                android:layout_width="match_parent"
                android:layout_height="1dp" />

            <RelativeLayout
                android:foreground="?android:attr/selectableItemBackgroundBorderless"
                android:clickable="true"
                android:id="@+id/disi"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:background="#ffffff"
                android:layout_width="match_parent"
                android:layout_height="45dp">
                <TextView
                    android:layout_centerVertical="true"
                    android:layout_alignParentLeft="true"
                    android:background="@mipmap/my_love"
                    android:layout_width="30dp"
                    android:layout_height="30dp" />
                <TextView
                    android:layout_centerVertical="true"
                    android:text="@string/my_love"
                    android:textColor="#666666"
                    android:layout_marginStart="40dp"
                    android:layout_alignParentLeft="true"
                    android:layout_marginLeft="15dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
                <TextView
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:background="@mipmap/icon_right"
                    android:layout_width="16dp"
                    android:layout_height="16dp" />
            </RelativeLayout>
            <TextView
                android:background="#f5f5f5"
                android:layout_width="match_parent"
                android:layout_height="1dp" />


            <RelativeLayout
                android:foreground="?android:attr/selectableItemBackgroundBorderless"
                android:clickable="true"
                android:id="@+id/diwu"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:layout_marginTop="10dp"
                android:background="#ffffff"
                android:layout_width="match_parent"
                android:layout_height="45dp">
                <TextView
                    android:layout_centerVertical="true"
                    android:layout_alignParentLeft="true"
                    android:background="@mipmap/my_order"
                    android:layout_width="30dp"
                    android:layout_height="30dp" />
                <TextView
                    android:layout_centerVertical="true"
                    android:text="@string/location"
                    android:textColor="#666666"
                    android:layout_marginStart="40dp"
                    android:layout_alignParentLeft="true"
                    android:layout_marginLeft="15dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
                <TextView
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:background="@mipmap/icon_right"
                    android:layout_width="16dp"
                    android:layout_height="16dp" />
            </RelativeLayout>
            <TextView
                android:background="#f5f5f5"
                android:layout_width="match_parent"
                android:layout_height="1dp" />

            <RelativeLayout
                android:foreground="?android:attr/selectableItemBackgroundBorderless"
                android:clickable="true"
                android:id="@+id/diliu"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:background="#ffffff"
                android:layout_width="match_parent"
                android:layout_height="45dp">
                <TextView
                    android:layout_centerVertical="true"
                    android:layout_alignParentLeft="true"
                    android:background="@mipmap/my_order"
                    android:layout_width="30dp"
                    android:layout_height="30dp" />
                <TextView
                    android:layout_centerVertical="true"
                    android:text="@string/version"
                    android:textColor="#666666"
                    android:layout_marginStart="40dp"
                    android:layout_alignParentLeft="true"
                    android:layout_marginLeft="15dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
                <TextView
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:background="@mipmap/icon_right"
                    android:layout_width="16dp"
                    android:layout_height="16dp" />
            </RelativeLayout>
            <TextView
                android:background="#f5f5f5"
                android:layout_width="match_parent"
                android:layout_height="1dp" />
            <TextView
                android:background="#f5f5f5"
                android:layout_width="match_parent"
                android:layout_height="10dp" />

            <RelativeLayout
                android:foreground="?android:attr/selectableItemBackgroundBorderless"
                android:clickable="true"
                android:id="@+id/diqi"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:background="#ffffff"
                android:layout_width="match_parent"
                android:layout_height="45dp">
                    <TextView
                        android:layout_centerVertical="true"
                        android:layout_alignParentLeft="true"
                        android:background="@mipmap/my_lock"
                        android:layout_width="30dp"
                        android:layout_height="30dp" />
                    <TextView
                        android:layout_centerVertical="true"
                        android:text="@string/log_out"
                        android:textColor="#666666"
                        android:layout_marginStart="40dp"
                        android:layout_alignParentLeft="true"
                        android:layout_marginLeft="15dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />
                    <TextView
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:background="@mipmap/icon_right"
                        android:layout_width="16dp"
                        android:layout_height="16dp" />
            </RelativeLayout>
            <TextView
                android:background="#f5f5f5"
                android:layout_width="match_parent"
                android:layout_height="1dp" />

        </LinearLayout>
    </ScrollView>
</RelativeLayout>
